datasource db {
    provider = "postgresql"
}

generator client {
    provider      = "prisma-client-js"
}

enum Role {
    USER
    ADMIN
    MANAGER
}

model User {
    id        String   @id @default(uuid())
    email     String   @unique
    password  String
    name      String?
    role      Role     @default(USER)
    tenantId  String?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    refreshTokens RefreshToken[]
    employee      Employee?

    @@index([tenantId])
}

model RefreshToken {
    id        String   @id @default(uuid())
    token     String   @unique
    userId    String
    user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    expiresAt DateTime
    createdAt DateTime @default(now())
    revoked   Boolean  @default(false)
}

model Tenant {
    id               String   @id @default(uuid())
    name             String
    subdomain        String   @unique
    subscriptionPlan String   @default("FREE") // FREE, BASIC, PRO, ENTERPRISE
    createdAt        DateTime @default(now())
    updatedAt        DateTime @updatedAt
}

model CommonCode {
    id        String   @id @default(uuid())
    groupCode String
    code      String
    value     String
    tenantId  String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@unique([tenantId, groupCode, code])
    @@index([tenantId])
}

model Department {
    id        String       @id @default(uuid())
    name      String
    parentId  String?
    parent    Department?  @relation("DepartmentHierarchy", fields: [parentId], references: [id])
    children  Department[] @relation("DepartmentHierarchy")
    tenantId  String
    createdAt DateTime     @default(now())
    updatedAt DateTime     @updatedAt
    employees Employee[]

    @@index([tenantId])
}

model Employee {
    id           String      @id @default(uuid())
    userId       String      @unique
    user         User        @relation(fields: [userId], references: [id])
    departmentId String?
    department   Department? @relation(fields: [departmentId], references: [id])
    tenantId     String
    position     String? // 직급 (CommonCode)
    salary       Decimal     @default(0) @db.Decimal(15, 2)
    joinDate     DateTime
    createdAt    DateTime    @default(now())
    updatedAt    DateTime    @updatedAt
    deletedAt    DateTime?

    attendances   Attendance[]
    leaveRequests LeaveRequest[]
    payrolls      Payroll[]

    @@index([tenantId])
}

model Attendance {
    id         String    @id @default(uuid())
    employeeId String
    employee   Employee  @relation(fields: [employeeId], references: [id])
    tenantId   String
    date       DateTime  @db.Date
    checkIn    DateTime?
    checkOut   DateTime?
    status     String // PRESENT, LATE, ABSENT, LEAVE
    createdAt  DateTime  @default(now())
    updatedAt  DateTime  @updatedAt

    @@unique([employeeId, date])
    @@index([tenantId])
    @@index([employeeId])
}

model LeaveRequest {
    id         String   @id @default(uuid())
    employeeId String
    employee   Employee @relation(fields: [employeeId], references: [id])
    tenantId   String
    type       String // ANNUAL, SICK, ETC
    startDate  DateTime @db.Date
    endDate    DateTime @db.Date
    reason     String?
    status     String   @default("PENDING") // PENDING, APPROVED, REJECTED
    createdAt  DateTime @default(now())
    updatedAt  DateTime @updatedAt

    @@index([tenantId])
    @@index([employeeId])
}

model Payroll {
    id          String        @id @default(uuid())
    employeeId  String
    employee    Employee      @relation(fields: [employeeId], references: [id])
    tenantId    String
    period      String // YYYY-MM
    totalAmount Decimal       @db.Decimal(15, 2)
    status      String        @default("DRAFT") // DRAFT, CONFIRMED, PAID
    createdAt   DateTime      @default(now())
    updatedAt   DateTime      @updatedAt
    items       PayrollItem[]

    @@unique([employeeId, period])
    @@index([tenantId])
    @@index([employeeId])
}

model PayrollItem {
    id        String  @id @default(uuid())
    payrollId String
    payroll   Payroll @relation(fields: [payrollId], references: [id], onDelete: Cascade)
    type      String // BASE_SALARY, BONUS, TAX, INSURANCE
    amount    Decimal @db.Decimal(15, 2)

    @@index([payrollId])
}

model Budget {
    id           String   @id @default(uuid())
    tenantId     String
    departmentId String?
    category     String // 예산 항목 (인건비, 운영비 등)
    fiscalYear   Int // 회계연도
    amount       Decimal  @db.Decimal(15, 2)
    spent        Decimal  @default(0) @db.Decimal(15, 2)
    createdAt    DateTime @default(now())
    updatedAt    DateTime @updatedAt

    @@unique([tenantId, departmentId, category, fiscalYear])
    @@index([tenantId])
    @@index([fiscalYear])
}

model ChartOfAccounts {
    id          String            @id @default(uuid())
    tenantId    String
    accountCode String // 계정과목 코드 (예: 1010, 2010)
    accountName String // 계정과목명
    accountType String // ASSET, LIABILITY, EQUITY, REVENUE, EXPENSE
    parentId    String?
    parent      ChartOfAccounts?  @relation("AccountHierarchy", fields: [parentId], references: [id])
    children    ChartOfAccounts[] @relation("AccountHierarchy")
    createdAt   DateTime          @default(now())
    updatedAt   DateTime          @updatedAt

    journalEntryLines JournalEntryLine[]

    @@unique([tenantId, accountCode])
    @@index([tenantId])
}

model JournalEntry {
    id          String   @id @default(uuid())
    tenantId    String
    entryDate   DateTime @db.Date
    description String
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt

    lines JournalEntryLine[]

    @@index([tenantId])
    @@index([entryDate])
}

model JournalEntryLine {
    id             String          @id @default(uuid())
    journalEntryId String
    journalEntry   JournalEntry    @relation(fields: [journalEntryId], references: [id], onDelete: Cascade)
    accountId      String
    account        ChartOfAccounts @relation(fields: [accountId], references: [id])
    debit          Decimal         @default(0) @db.Decimal(15, 2)
    credit         Decimal         @default(0) @db.Decimal(15, 2)

    @@index([journalEntryId])
    @@index([accountId])
}

model Asset {
    id               String   @id @default(uuid())
    tenantId         String
    assetNumber      String // 자동 생성 자산번호
    name             String
    category         String
    acquisitionDate  DateTime @db.Date
    acquisitionValue Decimal  @db.Decimal(15, 2)
    currentValue     Decimal  @db.Decimal(15, 2)
    status           String   @default("ACTIVE") // ACTIVE, TRANSFERRED, DISPOSED
    createdAt        DateTime @default(now())
    updatedAt        DateTime @updatedAt

    history AssetHistory[]

    @@unique([tenantId, assetNumber])
    @@index([tenantId])
}

model AssetHistory {
    id          String   @id @default(uuid())
    assetId     String
    asset       Asset    @relation(fields: [assetId], references: [id], onDelete: Cascade)
    changeType  String // ACQUIRED, TRANSFERRED, DEPRECIATED, DISPOSED
    description String
    changedAt   DateTime @default(now())

    @@index([assetId])
}

model Inventory {
    id          String   @id @default(uuid())
    tenantId    String
    itemName    String
    quantity    Decimal  @default(0) @db.Decimal(15, 2)
    minQuantity Decimal  @default(0) @db.Decimal(15, 2)
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt

    transactions InventoryTransaction[]

    @@unique([tenantId, itemName])
    @@index([tenantId])
}

model InventoryTransaction {
    id          String    @id @default(uuid())
    inventoryId String
    inventory   Inventory @relation(fields: [inventoryId], references: [id], onDelete: Cascade)
    type        String // IN, OUT
    quantity    Decimal   @db.Decimal(15, 2)
    date        DateTime  @db.Date
    description String?
    createdAt   DateTime  @default(now())

    @@index([inventoryId])
}

model Vehicle {
    id           String   @id @default(uuid())
    tenantId     String
    licensePlate String
    model        String
    status       String   @default("AVAILABLE") // AVAILABLE, IN_USE, MAINTENANCE
    createdAt    DateTime @default(now())
    updatedAt    DateTime @updatedAt

    reservations VehicleReservation[]

    @@unique([tenantId, licensePlate])
    @@index([tenantId])
}

model VehicleReservation {
    id        String   @id @default(uuid())
    vehicleId String
    vehicle   Vehicle  @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
    userId    String
    startDate DateTime @db.Date
    endDate   DateTime @db.Date
    purpose   String?
    createdAt DateTime @default(now())

    @@index([vehicleId])
    @@index([startDate, endDate])
}
