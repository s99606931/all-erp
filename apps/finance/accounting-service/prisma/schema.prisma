// accounting-service용 독립 Prisma 스키마

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
    output   = "../node_modules/.prisma/client"
}

// 계정과목
model ChartOfAccounts {
    id          String            @id @default(uuid())
    accountCode String            @map("account_code")
    accountName String            @map("account_name")
    accountType String            @map("account_type") // ASSET, LIABILITY, EQUITY, REVENUE, EXPENSE
    parentId    String?           @map("parent_id")
    parent      ChartOfAccounts?  @relation("AccountHierarchy", fields: [parentId], references: [id])
    children    ChartOfAccounts[] @relation("AccountHierarchy")
    tenantId    String            @map("tenant_id")
    createdAt   DateTime          @default(now()) @map("created_at")
    updatedAt   DateTime          @updatedAt @map("updated_at")

    journalLines JournalEntryLine[]

    @@unique([tenantId, accountCode])
    @@index([tenantId])
    @@map("chart_of_accounts")
}

// 분개
model JournalEntry {
    id          String   @id @default(uuid())
    entryDate   DateTime @map("entry_date") @db.Date
    description String
    tenantId    String   @map("tenant_id")
    createdAt   DateTime @default(now()) @map("created_at")

    lines JournalEntryLine[]

    @@index([tenantId])
    @@index([entryDate])
    @@map("journal_entries")
}

// 분개 라인
model JournalEntryLine {
    id        String  @id @default(uuid())
    entryId   String  @map("entry_id")
    accountId String  @map("account_id")
    debit     Decimal @default(0) @db.Decimal(15, 2)
    credit    Decimal @default(0) @db.Decimal(15, 2)

    entry   JournalEntry    @relation(fields: [entryId], references: [id], onDelete: Cascade)
    account ChartOfAccounts @relation(fields: [accountId], references: [id])

    @@index([entryId])
    @@index([accountId])
    @@map("journal_entry_lines")
}

model ProcessedEvent {
    eventId     String   @id @map("event_id")
    eventType   String   @map("event_type")
    processedAt DateTime @map("processed_at")
    createdAt   DateTime @default(now()) @map("created_at")

    @@map("processed_events")
}

model OutboxEvent {
    id        String   @id @default(uuid())
    eventId   String   @unique @map("event_id")
    eventType String   @map("event_type")
    payload   String
    status    String   @default("PENDING")
    createdAt DateTime @default(now()) @map("created_at")
    updatedAt DateTime @updatedAt @map("updated_at")

    @@map("outbox_events")
}
